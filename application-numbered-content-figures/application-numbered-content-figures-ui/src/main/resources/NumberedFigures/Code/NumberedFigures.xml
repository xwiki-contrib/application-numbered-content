#xwikicontent content div[data-cke-display-name="macro:figure"]:first-child {
  counter-reset: cfigure !important;
}

#xwikicontent figure,
#xwikicontent div[data-cke-display-name="macro:figure"] {
  counter-increment: cfigure;
}

