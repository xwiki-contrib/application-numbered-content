<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.xwiki.contrib</groupId>
    <artifactId>parent-platform</artifactId>
    <!-- TODO: change 14.0+ once the Information tab UIXP is released. -->
    <version>13.10</version>
  </parent>
  
  <packaging>pom</packaging>
  <groupId>org.xwiki.contrib.numbered.content</groupId>
  <artifactId>application-numbered-content</artifactId>
  <name>Numbered Content - Parent Model</name>
  <description>Allows to automatically add number on the content (e.g., headers, paragraphs, figures)</description>
  <version>1.2-SNAPSHOT</version>
  <developers>
    <developer>
      <id>mleduc</id>
      <name>Manuel Leduc</name>
      <organization>XWiki SAS</organization>
      <organizationUrl>http://www.xwiki.com</organizationUrl>
    </developer>
    <developer>
      <id>michitux</id>
      <name>Michael Hamann</name>
      <organization>XWiki SAS</organization>
      <organizationUrl>http://www.xwiki.com</organizationUrl>
    </developer>
  </developers>
  <distributionManagement>
    <repository>
      <id>xwiki-staging</id>
      <name>XWiki Staging Repository</name>
      <url>http://nexus.xwiki.org/nexus/service/local/staging/deploy/maven2/</url>
    </repository>
  </distributionManagement>
  <scm>
    <connection>scm:git:git://github.com/xwiki-contrib/application-numbered-content.git</connection>
    <developerConnection>scm:git:git@github.com:xwiki-contrib/application-numbered-content.git</developerConnection>
    <url>https://github.com/xwiki-contrib/application-numbered-content/tree/master</url>
    <tag>HEAD</tag>
  </scm>
  <properties>
    <xwiki.release.jira.skip>false</xwiki.release.jira.skip>
    <xwiki.issueManagement.jira.id>NCAPP</xwiki.issueManagement.jira.id>
  </properties>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.8.1</version>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>2.22.2</version>
      </plugin>
      <plugin>
        <groupId>org.revapi</groupId>
        <artifactId>revapi-maven-plugin</artifactId>
        <configuration>
          <analysisConfiguration>
            <revapi.differences>
              <criticality>highlight</criticality>
              <differences>
                <item>
                  <ignore>true</ignore>
                  <code>java.field.constantValueChanged</code>
                  <old>field org.xwiki.contrib.numbered.content.HeaderNumberingService.SKIP_PARAMETER</old>
                  <new>field org.xwiki.contrib.numbered.content.HeaderNumberingService.SKIP_PARAMETER</new>
                  <justification>Early change to use a more generic parameter name.</justification>
                </item>
                <item>
                  <ignore>true</ignore>
                  <code>java.field.constantValueChanged</code>
                  <old>field org.xwiki.contrib.numbered.content.HeaderNumberingService.SKIP_PARAMETER @ org.xwiki.contrib.numbered.content.headings.AbstractHeadersNumberingService</old>
                  <new>field org.xwiki.contrib.numbered.content.HeaderNumberingService.SKIP_PARAMETER @ org.xwiki.contrib.numbered.content.headings.AbstractHeadersNumberingService</new>
                  <justification>Early change to use a more generic parameter name.</justification>
                </item>
              </differences>
            </revapi.differences>
          </analysisConfiguration>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <modules>
    <module>application-numbered-content-common</module>
    <module>application-numbered-content-figures</module>
    <module>application-numbered-content-headings</module>
  </modules>
</project>
